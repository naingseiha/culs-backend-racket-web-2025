#lang racket

(require web-server/response)

(define (render-page title body-content)
  (response/xexpr
   `(html
     (head
      (title ,title)
      (link ((rel "stylesheet") (href "/style.css"))))
     (body
      (nav ((class "navbar"))
           (a ((href "/home")) "Home") " | "
           (a ((href "/info")) "Information") " | "
           (a ((href "/about")) "About") " | "
           (a ((href "/contact")) "Contact"))
      ,body-content
      (footer ((class "footer"))
              (p "Â© 2025 Racket Web App"))))))
